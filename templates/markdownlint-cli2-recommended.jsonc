{
  // Recommended configuration for markdownlint-trap
  // Enables all custom rules with balanced strictness
  "customRules": [
    "markdownlint-trap"
  ],
  "config": {
    "MD013": false,
    "MD049": {
      "style": "asterisk"
    },
    "MD050": {
      "style": "asterisk"
    },
    "sentence-case-heading": true,
    "backtick-code-elements": true,
    "no-bare-url": true,
    "no-dead-internal-links": true,
    "no-literal-ampersand": true
  }
}
