{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "description": "Automated dependency updates for markdownlint-trap",
  "extends": [
    "config:recommended",
    ":maintainLockFilesWeekly",
    ":semanticCommits",
    ":separateMajorReleases"
  ],
  "schedule": [
    "before 6am on Monday"
  ],
  "timezone": "America/New_York",
  "labels": [
    "dependencies"
  ],
  "assignees": [],
  "reviewers": [],
  "prConcurrentLimit": 5,
  "prCreation": "immediate",
  "prHourlyLimit": 0,
  "rangeStrategy": "bump",
  "semanticCommits": "enabled",
  "vulnerabilityAlerts": {
    "enabled": true,
    "labels": [
      "security",
      "dependencies"
    ],
    "assignees": [],
    "reviewers": [],
    "schedule": [
      "at any time"
    ],
    "prCreation": "immediate",
    "automerge": false,
    "rangeStrategy": "update-lockfile"
  },
  "packageRules": [
    {
      "description": "Group all ESLint packages",
      "matchPackageNames": [
        "eslint"
      ],
      "matchPackagePatterns": [
        "^eslint-",
        "^@eslint/"
      ],
      "groupName": "ESLint and plugins"
    },
    {
      "description": "Group all Jest packages",
      "matchPackageNames": [
        "jest"
      ],
      "matchPackagePatterns": [
        "^@jest/",
        "^jest-",
        "^@types/jest"
      ],
      "groupName": "Jest and ecosystem"
    },
    {
      "description": "Group all markdownlint packages",
      "matchPackagePatterns": [
        "^markdownlint"
      ],
      "groupName": "markdownlint ecosystem"
    },
    {
      "description": "Group Husky and lint-staged (commit hooks)",
      "matchPackageNames": [
        "husky",
        "lint-staged"
      ],
      "groupName": "Commit hooks"
    },
    {
      "description": "Auto-merge dev dependency patch updates that pass CI",
      "matchDepTypes": [
        "devDependencies"
      ],
      "matchUpdateTypes": [
        "patch"
      ],
      "automerge": true,
      "automergeType": "pr",
      "automergeStrategy": "squash",
      "platformAutomerge": true
    },
    {
      "description": "Auto-merge dev dependency minor updates that pass CI",
      "matchDepTypes": [
        "devDependencies"
      ],
      "matchUpdateTypes": [
        "minor"
      ],
      "automerge": true,
      "automergeType": "pr",
      "automergeStrategy": "squash",
      "platformAutomerge": true
    },
    {
      "description": "Require manual review for production dependency updates",
      "matchDepTypes": [
        "dependencies"
      ],
      "automerge": false,
      "labels": [
        "dependencies",
        "production"
      ]
    },
    {
      "description": "Require manual review for major version updates",
      "matchUpdateTypes": [
        "major"
      ],
      "automerge": false,
      "labels": [
        "dependencies",
        "major-version"
      ]
    },
    {
      "description": "Use fix: commit type for patch updates",
      "matchDepTypes": [
        "dependencies",
        "devDependencies"
      ],
      "matchUpdateTypes": [
        "patch"
      ],
      "matchDatasources": [
        "npm"
      ],
      "semanticCommitType": "fix",
      "semanticCommitScope": "deps"
    }
  ],
  "lockFileMaintenance": {
    "enabled": true,
    "schedule": [
      "before 6am on Monday"
    ],
    "automerge": true,
    "automergeType": "pr",
    "automergeStrategy": "squash",
    "platformAutomerge": true,
    "commitMessageAction": "Update"
  },
  "dependencyDashboard": true,
  "dependencyDashboardTitle": "Dependency updates dashboard",
  "dependencyDashboardHeader": "This dashboard tracks all pending dependency updates. PRs are created automatically based on the schedule and grouping rules defined in `.github/renovate.json`.",
  "dependencyDashboardFooter": "For urgent security updates or to override the schedule, you can manually create PRs from this dashboard.",
  "ignoreDeps": [],
  "ignorePaths": [
    "**/node_modules/**",
    "**/test/**",
    "**/tests/**"
  ],
  "enabledManagers": [
    "npm"
  ],
  "npm": {
    "rangeStrategy": "bump"
  },
  "postUpdateOptions": [
    "npmDedupe"
  ],
  "prBodyTemplate": "{{{header}}}{{{table}}}{{{notes}}}{{{changelogs}}}{{{configDescription}}}{{{controls}}}{{{footer}}}",
  "prBodyColumns": [
    "Package",
    "Type",
    "Update",
    "Change",
    "Pending"
  ],
  "prBodyNotes": [
    "This PR was automatically generated by Renovate Bot.",
    "Auto-merge is enabled for dev dependency patches and minors that pass CI.",
    "Manual review is required for production dependencies and major version updates."
  ]
}
