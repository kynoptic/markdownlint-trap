{
  "name": "markdownlint-trap",
  "version": "2.5.0",
  "main": "./src/index.js",
  "exports": {
    ".": "./src/index.js",
    "./package.json": "./package.json"
  },
  "bin": {
    "markdownlint-trap": "./scripts/cli.cjs"
  },
  "files": [
    "src",
    "scripts/cli.cjs",
    "scripts/init.cjs",
    "scripts/doctor.cjs",
    "scripts/distribute-local.cjs",
    "templates",
    "recommended-config.jsonc",
    "basic-config.jsonc",
    "strict-config.jsonc"
  ],
  "type": "module",
  "scripts": {
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js",
    "test:integration": "node --experimental-vm-modules node_modules/jest/bin/jest.js tests/integration",
    "test:performance": "node --experimental-vm-modules node_modules/jest/bin/jest.js --config jest.config.performance.mjs",
    "test:performance:gc": "node --expose-gc --experimental-vm-modules node_modules/jest/bin/jest.js --config jest.config.performance.mjs",
    "test:integration:external": "RUN_NETWORK_TESTS=true node --experimental-vm-modules node_modules/jest/bin/jest.js tests/integration/curated-repos.test.js --verbose",
    "validate:external": "node scripts/validate-external.js",
    "lint": "eslint .",
    "security": "npm audit --omit=dev --audit-level=high",
    "docs:config": "node scripts/generate-config-docs.js",
    "doctor": "node scripts/doctor.cjs",
    "dist:local": "node scripts/distribute-local.cjs",
    "dist:local:dry": "node scripts/distribute-local.cjs --dry-run",
    "install:global": "bash scripts/install-global.sh",
    "install:global:dry": "bash scripts/install-global.sh --dry-run",
    "link:projects": "bash scripts/link-to-projects.sh",
    "link:projects:dry": "bash scripts/link-to-projects.sh --dry-run",
    "unlink:projects": "bash scripts/unlink-from-projects.sh",
    "unlink:projects:dry": "bash scripts/unlink-from-projects.sh --dry-run",
    "prepare": "node scripts/prepare.mjs",
    "validate": "npm run lint && npm test && echo 'âœ… All validation checks passed'",
    "lint:md": "markdownlint-cli2 \"**/*.md\"",
    "lint:md:fix": "markdownlint-cli2 --fix \"**/*.md\""
  },
  "dependencies": {
    "js-yaml": "^4.1.0",
    "jsonc-parser": "^3.3.1"
  },
  "peerDependencies": {
    "markdownlint-cli2": ">=0.20.0"
  },
  "peerDependenciesMeta": {
    "markdownlint-cli2": {
      "optional": true
    }
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@types/jest": "^30.0.0",
    "debug": "^4.4.3",
    "eslint": "^9.39.2",
    "glob": "^11.1.0",
    "globals": "^17.3.0",
    "husky": "^9.1.7",
    "jest": "^30.2.0",
    "lint-staged": "^16.2.7",
    "markdown-it": "^14.1.0",
    "markdownlint": "^0.40.0",
    "markdownlint-cli2": "^0.20.0",
    "prettier": "^3.8.1"
  },
  "lint-staged": {
    "*.{js,mjs}": [
      "eslint --fix"
    ],
    "*.md": [
      "bash -c 'if [[ \"$1\" != docs/configuration.md && ! \"$1\" =~ tests/fixtures/.* ]]; then markdownlint-cli2 --fix \"$1\" || true; fi' --"
    ]
  },
  "engines": {
    "node": ">=18"
  }
}
